---
import Layout from "./Layout.astro";
---

<Layout>
    <div class="container">
        <div class="header">
            <h1>ðŸ”„ JS Object to JSON Converter</h1>
            <p>Paste your JavaScript object and get formatted JSON output</p>
        </div>

        <div class="content">
            <div class="panel">
                <div class="panel-header">
                    <h2>Input (JavaScript Object)</h2>
                </div>
                <textarea
                    id="input"
                    placeholder="Paste your JavaScript object here...
    Example:
    {
      url: 'https://example.com',
      title: 'My Site'
    }"
                ></textarea>
                <div id="error" style="display: none;" class="error"></div>
            </div>

            <div class="panel">
                <div class="panel-header">
                    <h2>Output (JSON)</h2>
                    <button
                        class="btn-secondary"
                        id="copyBtn"
                        style="display: none;">ðŸ“‹ Copy</button
                    >
                </div>
                <textarea
                    id="output"
                    class="output-area"
                    readonly
                    placeholder="JSON output will appear here..."></textarea>
                <div id="success" style="display: none;" class="success"></div>
            </div>
        </div>

        <div class="actions">
            <button class="btn-primary" id="convertBtn">Convert to JSON</button>
            <button class="btn-secondary" id="clearBtn">Clear All</button>
        </div>
    </div>

    <script>
        const inputEl = document.getElementById("input") as HTMLTextAreaElement;
        const outputEl = document.getElementById(
            "output",
        ) as HTMLTextAreaElement;
        const errorEl = document.getElementById("error") as HTMLDivElement;
        const successEl = document.getElementById("success") as HTMLDivElement;
        const convertBtn = document.getElementById(
            "convertBtn",
        ) as HTMLButtonElement;
        const clearBtn = document.getElementById(
            "clearBtn",
        ) as HTMLButtonElement;
        const copyBtn = document.getElementById("copyBtn") as HTMLButtonElement;

        function convertToJSON(): void {
            errorEl.style.display = "none";
            successEl.style.display = "none";

            const input: string = inputEl.value.trim();

            if (!input) {
                showError("Please enter a JavaScript object");
                return;
            }

            try {
                // Wrap the input in parentheses and evaluate it
                const obj: unknown = eval("(" + input + ")");

                // Convert to JSON with formatting
                const json: string = JSON.stringify(obj, null, 2);

                outputEl.value = json;
                copyBtn.style.display = "block";
                showSuccess("âœ“ Converted successfully!");
            } catch (e) {
                const errorMessage: string =
                    e instanceof Error ? e.message : "Unknown error occurred";
                showError("Invalid JavaScript object: " + errorMessage);
                outputEl.value = "";
                copyBtn.style.display = "none";
            }
        }

        function showError(message: string): void {
            errorEl.textContent = message;
            errorEl.style.display = "block";
        }

        function showSuccess(message: string): void {
            successEl.textContent = message;
            successEl.style.display = "block";
            setTimeout(() => {
                successEl.style.display = "none";
            }, 3000);
        }

        function clearAll(): void {
            inputEl.value = "";
            outputEl.value = "";
            errorEl.style.display = "none";
            successEl.style.display = "none";
            copyBtn.style.display = "none";
        }

        function copyToClipboard(): void {
            outputEl.select();
            document.execCommand("copy");
            showSuccess("âœ“ Copied to clipboard!");
        }

        convertBtn.addEventListener("click", convertToJSON);
        clearBtn.addEventListener("click", clearAll);
        copyBtn.addEventListener("click", copyToClipboard);

        // Convert on Enter (Ctrl/Cmd + Enter)
        inputEl.addEventListener("keydown", (e: KeyboardEvent) => {
            if ((e.ctrlKey || e.metaKey) && e.key === "Enter") {
                convertToJSON();
            }
        });
    </script>
</Layout>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family:
            -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
            "Helvetica Neue", Arial, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .container {
        max-width: 1200px;
        width: 100%;
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    .header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        text-align: center;
    }

    .header h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .header p {
        opacity: 0.9;
        font-size: 0.95rem;
    }

    .content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        padding: 2rem;
    }

    .panel {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .panel-header h2 {
        font-size: 1.25rem;
        color: #333;
    }

    textarea {
        width: 100%;
        min-height: 400px;
        padding: 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-family: "Courier New", monospace;
        font-size: 0.9rem;
        resize: vertical;
        transition: border-color 0.3s;
    }

    textarea:focus {
        outline: none;
        border-color: #667eea;
    }

    .output-area {
        background: #1e293b;
        color: #e2e8f0;
        border: none;
    }

    button {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 6px;
        font-size: 0.95rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .btn-secondary {
        background: #f1f5f9;
        color: #475569;
    }

    .btn-secondary:hover {
        background: #e2e8f0;
    }

    .actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        padding: 0 2rem 2rem;
    }

    .error {
        background: #fee;
        border: 1px solid #fcc;
        color: #c33;
        padding: 1rem;
        border-radius: 6px;
        font-size: 0.9rem;
    }

    .success {
        background: #efe;
        border: 1px solid #cfc;
        color: #3c3;
        padding: 1rem;
        border-radius: 6px;
        font-size: 0.9rem;
        text-align: center;
    }

    @media (max-width: 768px) {
        .content {
            grid-template-columns: 1fr;
        }

        body {
            padding: 1rem;
        }

        .header h1 {
            font-size: 1.5rem;
        }
    }
</style>
